<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@android:color/background_light"
	tools:context="${relativePackage}.${activityClass}" >
	
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >
        
        <Button
            android:id="@+id/continue_game_button"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:text="@string/continue_game_button"
            android:textStyle="bold"
            android:textSize="@dimen/text_size"
            android:onClick="onClickContinueGame" />
        
        <Button
            android:id="@+id/new_game_button"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:text="@string/new_game_button"
            android:textStyle="bold"
            android:textSize="@dimen/text_size"
            android:onClick="onClickNewGame" />
        
        <Button
            android:id="@+id/about_game_button"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:text="@string/about_game_button"
            android:textStyle="bold"
            android:textSize="@dimen/text_size"
            android:onClick="onClickAboutGame" />
        
        <Button
            android:id="@+id/quit_game_button"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:text="@string/quit_game_button"
            android:textStyle="bold"
            android:textSize="@dimen/text_size"
            android:onClick="onClickQuitGame" />
    </LinearLayout>
</RelativeLayout>
